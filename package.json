{
	"name": "violet.ts",
	"version": "0.2.0",
	"description": "A simple TypeScript task runner",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
    "bin": "dist/index.js",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun build --target=node ./src/index.ts --outfile=dist/index.js --minify && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --project tsconfig.types.json",
		"clean": "rm -rf dist tsconfig.types.tsbuildinfo",
		"dev": "bun --watch src/index.ts",
		"test": "bun test"
	},
	"devDependencies": {
		"bun-types": "^1.3.1",
		"typescript": "^5.9.3"
	},
	"keywords": [
		"task-runner",
		"typescript",
		"violet"
	],
	"author": "nickshiro",
	"license": "MIT"
}
